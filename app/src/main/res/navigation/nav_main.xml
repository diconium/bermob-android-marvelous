<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/entryFragment">

    <fragment
        android:id="@+id/entryFragment"
        android:name="com.diconium.bermob.marvelous.EntryFragment"
        android:label=""
        tools:layout="@layout/frag_entry">
        <action
            android:id="@+id/toSearchFragment"
            app:destination="@id/searchFragment" />
    </fragment>

    <fragment
        android:id="@+id/searchFragment"
        android:name="com.diconium.bermob.marvelous.SearchFragment"
        android:label="SearchFragment"
        tools:layout="@layout/frag_search">
        <argument
            android:name="query"
            app:argType="string" />
    </fragment>

</navigation>